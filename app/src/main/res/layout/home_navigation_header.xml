<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_navigation_header_height"
    android:layoutDirection="rtl">

    <android.support.constraint.Guideline
        android:id="@+id/home_navigation_header_gl_x05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_navigation_header_iv_profile"
        android:layout_width="@dimen/img_size_64"
        android:layout_height="@dimen/img_size_64"
        android:src="@drawable/images_avatar_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_navigation_header_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/home_navigation_header_gl_x05"
        app:layout_constraintTop_toBottomOf="@id/home_navigation_header_iv_profile" />

</android.support.constraint.ConstraintLayout>