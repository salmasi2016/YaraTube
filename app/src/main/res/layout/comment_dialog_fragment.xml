<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dialog_fragment_width"
        android:layout_height="@dimen/dialog_fragment_height">

        <android.support.constraint.Guideline
            android:id="@+id/internet_dialog_fragment_gl_y3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <android.support.constraint.Guideline
            android:id="@+id/internet_dialog_fragment_gl_y5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <android.support.constraint.Guideline
            android:id="@+id/internet_dialog_fragment_gl_y7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <android.support.constraint.Guideline
            android:id="@+id/comment_dialog_fragment_gl_y9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/internet_dialog_fragment_gl_x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/internet_dialog_fragment_gl_x9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <RatingBar
            android:id="@+id/internet_dialog_fragment_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/internet_dialog_fragment_gl_y3"
            app:layout_constraintRight_toRightOf="@id/internet_dialog_fragment_gl_x1"
            app:layout_constraintLeft_toLeftOf="@id/internet_dialog_fragment_gl_x9"/>

        <EditText
            android:id="@+id/internet_dialog_fragment_tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/opinion"
            android:inputType="text"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@id/internet_dialog_fragment_gl_y5"
            app:layout_constraintLeft_toLeftOf="@id/internet_dialog_fragment_gl_x9"
            app:layout_constraintRight_toRightOf="@id/internet_dialog_fragment_gl_x1"
            app:layout_constraintTop_toTopOf="@id/internet_dialog_fragment_gl_y3" />

        <Button
            android:id="@+id/comment_dialog_fragment_btn_record"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/record"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@id/comment_dialog_fragment_gl_y9"
            app:layout_constraintLeft_toLeftOf="@id/internet_dialog_fragment_gl_x9"
            app:layout_constraintRight_toRightOf="@id/internet_dialog_fragment_gl_x1"
            app:layout_constraintTop_toTopOf="@id/internet_dialog_fragment_gl_y7" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>