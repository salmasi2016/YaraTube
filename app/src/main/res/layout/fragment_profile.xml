<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/profile"
            app:titleTextColor="@android:color/white" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_y95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_profile_gl_x95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/imgSize2"
        android:layout_height="@dimen/imgSize2"
        android:src="@drawable/images_avatar_circular"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y2" />

    <ImageView
        android:layout_width="@dimen/imgSize1"
        android:layout_height="@dimen/imgSize1"
        android:src="@drawable/pencil_edit_button"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y35"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x05"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y35" />

    <EditText
        android:id="@+id/fragment_profile_et_fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginRight="@dimen/margin1"
        android:hint="@string/fullName"
        android:textSize="@dimen/textSize1"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y35"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_gl_x85"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x15"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y35" />

    <ImageView
        android:layout_width="@dimen/imgSize1"
        android:layout_height="@dimen/imgSize1"
        android:src="@drawable/pencil_edit_button"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y5"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x05"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y5" />

    <EditText
        android:id="@+id/fragment_profile_et_dateBirth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin1"
        android:hint="@string/dateOfBirth"
        android:textSize="@dimen/textSize1"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y5"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_gl_x85"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x15"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y5" />

    <ImageView
        android:layout_width="@dimen/imgSize1"
        android:layout_height="@dimen/imgSize1"
        android:src="@drawable/pencil_edit_button"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y65"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x05"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y65" />

    <RadioGroup
        android:id="@+id/fragment_profile_rg_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin1"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y65"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_gl_x85"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x15"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y65">

        <RadioButton
            android:id="@+id/fragment_profile_rb_man"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/man"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize2" />

        <RadioButton
            android:id="@+id/fragment_profile_rb_woman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/woman"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize2" />

    </RadioGroup>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y95"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_gl_x95"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x55"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y85" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/recordChanges"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_gl_y95"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_gl_x45"
        app:layout_constraintRight_toRightOf="@id/fragment_profile_gl_x05"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_gl_y85" />

</android.support.constraint.ConstraintLayout>